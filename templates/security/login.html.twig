    {% include "page_head/page_head.html.twig" with {page_name: 'Login'} %}
	<div class="main_content">
		<div class="login_register_wrap section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-6 col-md-10">
						<div class="login_wrap">
							<div class="padding_eight_all bg-white">
								<div class="heading_s1">
									<h3>Connexion</h3>
								</div>
								<form class="ng-untouched ng-pristine ng-invalid" method="POST">

                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                
                                    {% if app.user %}
                                        <div class="mb-3 ">
                                           <span class="text-danger">Vous êtes déjà connecté !</span> <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                        </div>
                                    {% endif %}

									<div class="form-group mb-3">
	                                    <input type="email" placeholder="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
									</div>
									<div class="form-group mb-3">
	                                    <input type="password" placeholder="mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
									</div>

                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

									<div class="login_footer form-group mb-3">
										<a href="#">Mot de passe oublié ?</a>
									</div>
									<div class="form-group mb-3">
										<button type="submit" name="login" class="btn btn-fill-out btn-block">Log in</button>
									</div>
                                    
								</form>

								<div class="form-note text-center">Pas encore de compte ?
									<a href="/register">S'inscrire maintenant</a>
								</div>
							</div>
						</div>
					</div>
				</div>

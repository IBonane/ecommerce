{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
{% include "page_head/page_head.html.twig" with {page_name: 'Register'} %}
	{# {% for flash_error in app.flashes('verify_email_error') %}
		        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		    {% endfor %}
		
		    <h1>Register</h1>
		
		    {{ form_errors(registrationForm) }}
		
		    {{ form_start(registrationForm) }}
		        {{ form_row(registrationForm.email) }}
		        {{ form_row(registrationForm.plainPassword, {
		            label: 'Password'
		        }) }}
		        {{ form_row(registrationForm.agreeTerms) }}
		
		        <button type="submit" class="btn">Register</button>
		    {{ form_end(registrationForm) }} #}
	<div class="main_content">
		<div class="login_register_wrap section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-6 col-md-10">
                    	{% set messages = app.flashes %}
						{% set statusFlash = messages|keys %}

						{% for message in messages %}

							{% if statusFlash[0] == "success" %}
								<div class="alert alert-success">{{message[0]}}</div>
							{% else %}
								<div class="alert alert-danger">{{message[0]}}</div>
							{% endif %}
						{% endfor %}
						<div class="login_wrap">
							<div class="padding_eight_all bg-white">
								<div class="heading_s1">
									<h3>Inscription</h3>
                                    
                                    {% for flash_error in app.flashes('verify_email_error') %}
                                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                    {% endfor %}
								</div>
								{{ form_start(registrationForm) }}
                                    <div class="form-group mb-3"> {{ form_widget(registrationForm.fullname) }}
								</div>

								<div class="form-group mb-3">
									{{ form_widget(registrationForm.email) }}

                                    {% if form_errors(registrationForm.email) %}
										<div class="alert alert-danger" role="alert">
											{{ form_errors(registrationForm.email) }}
										</div>
									{% endif %}
								</div>

								<div class="form-group mb-3">
									{{ form_widget(registrationForm.civility) }}
								</div>

								<div class="form-group mb-3">
									{{ form_widget(registrationForm.plainPassword.first) }}
									
                                    {% if form_errors(registrationForm.plainPassword.first) %}
										<div class="alert alert-danger" role="alert">
											{{ form_errors(registrationForm.plainPassword.first) }}
										</div>
									{% endif %}
								</div>
								<div class="form-group mb-3">
									{{ form_widget(registrationForm.plainPassword.second) }}
									
                                    {% if form_errors(registrationForm.plainPassword.second) %}
										<div class="alert alert-danger" role="alert">
											{{ form_errors(registrationForm.plainPassword.second) }}
										</div>
									{% endif %}
								</div>

								<div class="login_footer form-group mb-3">
									<div class="chek-form">
										<div class="custome-checkbox d-flex gap-4">
											{{ form_widget(registrationForm.agreeTerms) }}
											<label for="agreeTerms" class="form-check-label">
												<span>J'accepte les conditions &amp; Politique.</span>
											</label>
										</div>
									</div>
								</div>
								<div class="form-group mb-3">
									<button type="submit" name="register" class="btn btn-fill-out btn-block">S'inscrire</button>
								</div>
								{{ form_end(registrationForm) }}
								{# </form> #}
								{# <div class="different_login">
									<span>
										or</span>
								</div>
								<ul class="btn-login list_none text-center">
									<li>
										<a href="#" class="btn btn-facebook">
											<i class="ion-social-facebook"></i>Facebook</a>
									</li>
									<li>
										<a href="#" class="btn btn-google">
											<i class="ion-social-googleplus"></i>Google</a>
									</li>
								</ul> #}
								<div class="form-note text-center">Déjà un compte?
									<a href="/login">Se connecter</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
